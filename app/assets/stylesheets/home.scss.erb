body {
  font-family: 'Lato', sans-serif;
}

h2, h3, h4, h5, h6 {
  font-family: 'Lato', sans-serif;
}

h1 {
  font-family: 'Ubuntu', sans-serif;
}

.fc h1 {
  font-family: 'Lato', sans-serif;
}
.small-8.columns {
  height: 100%;
  border-right: 3px solid black;
  border-top: 3px solid black;
}

.small-4.columns {
  border-top: 3px solid black;
}

.footer {
  background-color: #fff;
  color: #333;
}

.footer h4 {
  color: #fff;
}

li {
  list-style-type: none;
}

.scenic {
  background-image: url("<%= asset_path('scenic.jpg') %> ");
  background-image: no-repeat;
  background-size: cover;
  height: 150px;
  width: auto;
  border-radius: 5px;
}

.train {
  background-image: url("<%= asset_path('train.jpg') %> ");
  background-image: no-repeat;
  background-size: cover;
  height: 150px;
  width: auto;
  border-radius: 5px;
}

.top-bar {
  background-color: #fff;
}

.spinner {
  position: fixed;
  top: 75%;
  left: 75%;
}

.fc-header{
  font-family: 'Lato', sans-serif;
}

th.fc-day-header.fc-widget-header.fc-thu{
  background-color: #fff;
}

th.fc-day-header.fc-widget-header.fc-fri{
  background-color: #fff;
}

th.fc-day-header.fc-widget-header.fc-sat{
  background-color: #fff;
}

th.fc-day-header.fc-widget-header.fc-sun{
  background-color: #fff;
  color: red;
}

th.fc-day-header.fc-widget-header.fc-mon{
  background-color: #fff;
}

th.fc-day-header.fc-widget-header.fc-tue{
  background-color: #fff;
}

th.fc-day-header.fc-widget-header.fc-wed{
  background-color: #fff;
}

td.fc-day-number.fc-sun {
  color: red;
}

td.fc-widget-header {
  background-color: #fff;
}

.water {
  background-image: url("<%= asset_path('desk.jpg') %> ");
  background-image: no-repeat;
  background-size: cover;
  background-position: 100% 5%;
  padding: 150px 15px;
  margin-bottom: 30px;
  color: inherit;
}


