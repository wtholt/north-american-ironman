body {
  font-family: 'Lato', sans-serif;
  background-color: snow;
}
h1, h2, h3, h4, h5, h6 {
  font-family: 'Lato', sans-serif;
}

.fc h1 {
  font-family: 'Lato', sans-serif;
}
.small-8.columns {
  height: 100%;
  border-right: 3px solid black;
}

.footer {
  background-color: #fff;
  color: #333;
}

.footer h4 {
  color: #fff;
}

li {
  list-style-type: none;
}

.scenic {
  background-image: url("<%= asset_path('scenic.jpg') %> ");
  background-image: no-repeat;
  background-size: cover;
  height: 150px;
  width: auto;
  border-radius: 5px;
}

.train {
  background-image: url("<%= asset_path('train.jpg') %> ");
  background-image: no-repeat;
  background-size: cover;
  height: 150px;
  width: auto;
  border-radius: 5px;
}

.top-bar {
  background-color: snow;
}

.spinner {
  position: fixed;
  top: 75%;
  left: 75%;
}